html {
  background-color: #ccc;
}

body {
  background-color: #fff;
  margin: 0.5em 15%;
  padding: 0.5em;
}

.navigation {
  position: fixed;
  
  font-family: Arial, Sans-Serif;
  background-color: #FFA;
  border: outset 1px;
  
  top: 0.5em;
  left: 0.5em;
  width: 15em;
  padding: 0.5em;
  
  > ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    > li {
      cursor: pointer;
      margin: 0;
      padding: 0.15em;
      &:not(:first-child) { border-top: solid 1px #aaa; }
      &:hover {
        background-color: #0A6;
        color: white;
      }
      &.selected {
        background-color: #03C;
        color: white;
      }
    }    
  }
}

.gpc-ko-widget.treeview {
  float: left;
}

#side_panel {
  position: fixed;
  top: 0;
  bottom: 0;
  right: 0;
  width: 250px;
  //border-left: solid 1px grey;
  background-color: rgba(255,255,255,0.2);
}
