.gpc-ko-widget {
  font-family: Arial, Sans-Serif;
}

.gpc-ko-widget.treeview {

  display: inline-block;

  padding: 0.5em;
  
  ul.children {
    margin: 0;
    padding: 0;
    > li {
      list-style-type: none;
      margin-left: 0; // if the root node is not displayed (only its children), there is no indent
    }
  }
  
  .node ul.children > li {
    // TODO: the following should probably be set with inline styles
    //margin-left: 15px; // in all nodes actually displayed, we indent the children
  }
  
  .node > .header {
    
    > .handle {
      position: relative;
      top: 3px;
      display: inline-block;
      width: 11px;
      height: 11px;
      margin-right: 4px;
      vertical-align: top;
      //background-color: yellow;
      //border: solid 0.1em black;
      //background-position: 50% 50%;
      background-repeat: no-repeat;
      //margin-right: 0.15em;
      user-select: none;
    }
    
    .label {
      box-sizing: border-box;
      //margin: 0 4px;
      padding: 1px 2px;
      &:first-child { margin-left: 0; }
      display: inline-block;
      text-overflow: ellipsis;
      overflow: hidden;
    }
  }
  
  // A node not explicitly marked as a "leaf" will have a "handle"
  
  .node.open {
    > .header > .handle {
      background-image: url('minus.png');
    }
    > .children {
      display: block;
    }
  }
  .node.closed {
    > .header > .handle {
      background-image: url('plus.png');
    }
    > .children {
      display: none;
    }
  }
  
}
 
