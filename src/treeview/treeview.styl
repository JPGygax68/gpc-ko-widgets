.gpc-ko-widget {
  font-family: Arial, Sans-Serif;
}

.gpc-ko-widget.treeview {

  display: inline-block;

  padding: 0.5em;
  
  ul.children {
    margin: 0;
    padding: 0;
    > li {
      list-style-type: none;
      margin-left: 0; // if the root node is not displayed (only its children), there is no indent
    }
  }
  
  .node > .header {

    > * {
      box-sizing: border-box;
      display: inline-block;
    }
    
    > *:not(:first-child) {
      margin-left: 4px; // TODO: inline styling (property-controlled?)
    }
    
    > .handle {
      position: relative;
      top: 3px;
      width: 11px;
      height: 11px;
      vertical-align: top;
      //background-color: yellow;
      background-repeat: no-repeat;
      user-select: none;
    }

    > .label, > .value {
      text-overflow: ellipsis;
      overflow: hidden;
    }
    
    .label {
      //margin: 0 4px;
      padding: 1px 2px;
      &:first-child { margin-left: 0; }
    }
    
  }
  
  // A node not explicitly marked as a "leaf" will have a "handle"
  
  .node.open {
    > .header > .handle {
      background-image: url('minus.png');
    }
    > .children {
      display: block;
    }
  }
  .node.closed {
    > .header > .handle {
      background-image: url('plus.png');
    }
    > .children {
      display: none;
    }
  }
  
}
 
